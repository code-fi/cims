<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorSecondaryDark</item>
        <!--<inamename="colorControlNormal">@color/colorPrimaryDark</item>-->
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.Input" parent="@style/Widget.AppCompat.EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:selectable">false</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:singleLine">true</item>
        <item name="android:freezesText">true</item>
    </style>

    <style name="AppTheme.Input.NoBackground" parent="AppTheme.Input">
        <item name="android:background">@null</item>
        <item name="android:paddingTop">@dimen/material_content_padding</item>
        <item name="android:paddingBottom">@dimen/material_content_padding</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="column">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="icon_caption" parent="Base.TextAppearance.AppCompat.Caption">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="AppTheme.List.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:maxLines">1</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@android:color/tertiary_text_dark</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginBottom">@dimen/material_content_padding</item>
    </style>

    <style name="AppTheme.List.Title.Con" parent="TextAppearance.AppCompat.Body1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/tertiary_text_dark</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_weight">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>
</resources>
